<h1>New Game</h1>

<ul class = "grid">
    <%  @grid.each do |letter| %>
        <li clas = "letter"><%= letter %> </li>
    <% end %>
</ul>

<p>What's the longest word you can think of?</p>

<form action = "/score" method="POST">
    <input type="text" name="answer" required >
    <input type="hidden" name="grid" value="<%= @grid.join %>">
    <input type="submit" value="Play!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>